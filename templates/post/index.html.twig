{% extends 'base.html.twig' %}
{% block title %}Homepage
{% endblock %}
{% block body %}
	<div class="row gy-4">
		{% for post in posts %}
			<div class="col-lg-3 col-md-4 col-6">
				<div class="card bg-light shadow-sm" style=" background: #262129">
					<img src="http://picsum.photos/id/{{random(400,800)}}/200" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">
							{{ post.title | upper}}
						</h5>
						<hr>
						<p class="card-text">
							{{ post.introduction }}.
						</p>

						<div class='fst-italic'>
							{{ post.comments|length }}
							{% if post.comments|length < 2 %}
								comment
							{% else %}
								comments
							{% endif %}
						</div>
						<div class="d-flex justify-content-between mt-3">

							{% if app.user %}
								<a href="{{path('one_post', { 'id' : post.id})}}" class="btn btn-primary col-7">
									Read
								</a>
								<a href="{{path('edit_post', { 'id' : post.id})}}" class="btn btn-warning col-4">
									Edit
								</a>
							{% else %}
								<a href="{{path('one_post', { 'id' : post.id})}}" class="btn btn-primary col-12">
									Read
								</a>
							{% endif %}

						</div>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
