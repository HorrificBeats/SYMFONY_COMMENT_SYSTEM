{% extends "base.html.twig" %}
{% block body %}

	<div class="container w-75 mx-auto p-4 rounded text-light" style='background: #AEB4E7'>
		{# {{form(postForm)}} #}

        {{ form_start(postForm) }}

            {{ form_row(postForm.title) }}
            {{ form_row(postForm.introduction) }}
            {{ form_row(postForm.content) }}
            <div class='mt-3'>
                {{ form_row(postForm.save) }}
            </div>

        {{ form_end(postForm) }}
	</div>
    <style>
        input {
            margin-bottom: 15px;
        }
        label {
            font-size: 1.3rem;
        }

        textarea {
            height: 250px;
        }
        .btn{
            width: 100%;
        }
    </style>
{% endblock %}
