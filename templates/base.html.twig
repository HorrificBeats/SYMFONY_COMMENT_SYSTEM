<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}AJAX in Symfony!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body style='background: #CBCEE7'>
		<nav class="navbar navbar-expand-lg navbar-light" style='background: #AEB4E7'>
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('homepage')}}">BLOG</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						{% if (app.user) %}
							<li class="nav-item">
								<a class="nav-link " aria-current="page" href="{{ path('app_logout')}}">Logout</a>
							</li>


							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									ADMIN
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item" href="{{ path('create_post')}}">Add Post</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item" href="/comments">Comments List</a>
									</li>
								</ul>
							</li>


						</ul>
						<ul class="nav navbar-nav" style="float: right">
							<li class="nav-item">
								<a href='{{ path('user_index', {'id' : app.user.id } )}}' class="nav-link userName" aria-current="page">Profile
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link userName text-light" aria-current="page">
									{{app.user.name}}
								</a>
							</li>
							<li class="nav-item"><img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="" style='height: 2rem ;border-radius: 50%;'></li>
						</ul>
				{% else %}
					</ul>
					<ul class="nav navbar-nav" style="float: right">
						<li class="nav-item">
							<a class="nav-link " aria-current="page" href="{{ path('app_login')}}">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link btn btn-primary text-white" aria-current="page" href="{{ path('app_register')}}">Register</a>
						</li>
					</ul>
				{% endif %}

			</ul>
		</div>
	</body>
</html></div></body></html></nav><div class="container mt-5 mb-5"> {% block body %}{% endblock %}</div></body></html>
