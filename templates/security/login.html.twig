{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		<h1 class="mb-5 font-weight-normal text-center">Sign in</h1>

		<div class="w-50 mx-auto p-4 rounded shadow-sm" style='background: #AEB5E7'>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
			<label for="inputPassword" class='mt-3'>Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


			<div class="checkbox mb-1 mt-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Remember me
				</label>
			</div>


			<button class="btn btn-md btn-primary w-100 mt-3" type="submit">
				Sign in
			</button>
		</div>

	</form>
{% endblock %}
